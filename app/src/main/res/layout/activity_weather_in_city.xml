<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView

        android:layout_marginTop="@dimen/standartmargintop"
        android:id="@+id/textview_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/city_wasn_t_choosen"/>

    <TextView

        android:layout_marginTop="@dimen/standartmargintop"
        android:id="@+id/textview_weather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/city_wasn_t_choosen"/>

    <Button

        android:layout_gravity="bottom"
        android:id="@+id/button_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_std_share"
        android:layout_marginRight="@dimen/padding_std_share"
        android:layout_marginTop="@dimen/standartmargintop"
        android:text="@string/share_btn"
        />
    </LinearLayout>
